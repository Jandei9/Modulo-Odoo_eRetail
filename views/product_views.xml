<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="product_template_form_view_eretail" model="ir.ui.view">
        <field name="name">product.template.form.eretail</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_form_view"/>
        <field name="arch" type="xml">
            <div name="button_box" position="inside">
                 <button name="button_sync_with_eretail" type="object" class="oe_stat_button" icon="fa-refresh" string="Sincronizar eRetail"/>
            </div>
            <page name="general_information" position="after">
                <page string="eRetail">
                    <group>
                        <field name="eretail_link_id" nolabel="1">
                           <tree editable="bottom">
                                <field name="eretail_goods_code"/>
                                <field name="eretail_template"/>
                                <field name="eretail_sync_status"/>
                                <field name="eretail_last_sync"/>
                           </tree>
                        </field>
                    </group>
                </page>
            </page>
        </field>
    </record>

    <record id="action_mass_sync_eretail" model="ir.actions.server">
        <field name="name">Sincronizaci√≥n Masiva eRetail</field>
        <field name="model_id" ref="product.model_product_template"/>
        <field name="binding_model_id" ref="product.model_product_template"/>
        <field name="state">code</field>
        <field name="code">
            if records:
                records.mass_sync_action(records.ids)
        </field>
    </record>
</odoo>